{
  "id": "approval_step",
  "name": "Approval Step",
  "description": "Component to require for approval before proceeding with the workflow.",
  "version": "1.0.0",
  "category": "node",
  "author": "BWF Components",
  "editable": false,
  "icon_class": "bi bi-check-circle",
  "icon_image_src": "icon.png",
  "node_type": "node",
  "base_input": [
    {
      "key": "roles",
      "label": "Roles",
      "type": "array",
      "value": "",
      "required": true,
      "value_rules": {
        "dynamic": true,
        "structure": {
          "role_id": {
            "key": "role_id",
            "label": "Role",
            "type": "object",
            "value": "",
            "required": true,
            "value_rules": {
              "is_model": true,
              "ajax": {
                "url": "/approvals/roles/",
                "structure": {
                  "id": {
                    "key": "id",
                    "label": "ID",
                    "type": "string"
                  },
                  "name": {
                    "key": "name",
                    "label": "Name",
                    "type": "string"
                  },
                  "description": {
                    "key": "description",
                    "label": "Description",
                    "type": "string"
                  },
                  "system_name": {
                    "key": "system_name",
                    "label": "System Name",
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    
    {
      "key": "form",
      "label": "Related form",
      "type": "object",
      "value": "",
      "required": true,
      "value_rules": {
        "is_model": true,
        "ajax": {
          "url": "/approvals/approval-forms/",
          "structure": {
            "form_id": {
              "key": "form_id",
              "label": "ID",
              "type": "string"
            },
            "name": {
              "key": "name",
              "label": "Name",
              "type": "string"
            },
            "description": {
              "key": "description",
              "label": "Description",
              "type": "string"
            },
            "active_version": {
              "key": "active_version",
              "label": "Active Version",
              "type": "number"
            },
            "fields": {
              "key": "fields",
              "label": "Fields",
              "type": "object"
            }
          }
        }
      }
    },
    {
      "key": "approval_timeout",
      "label": "Approval Timeout (minutes)",
      "type": "number",
      "value": 30,
      "required": false,
      "placeholder": 30
    }
  ],
  "base_output": [
    {
      "key": "is_approved",
      "label": "Is Approved",
      "type": "boolean"
    }
  ]
}
